.navbar-wrapper
  .container-fluid
    .navbar.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
          a.navbar-brand.fa.fa-cube(href='/') Philip Bankier
        .collapse.navbar-collapse#navbar
          ul.nav.navbar-nav
            li(class=(title === 'Home') ? 'active' : undefined)
              a(href='/') Home
            li(class=(title === 'Contact') ? 'active' : undefined)
              a(href='/contact') Contact Me
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") My Things
                span(class='caret')
                  ul.dropdown-menu
                    li(class=(title === 'About') ? 'active' : undefined)
                      a(href='/about') About Me
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") Cool Stuff
                span(class='caret')
                  ul.dropdown-menu
                    li
                      a(href='/articles') Articles
            li
              a(href='/status') Status

          ul.nav.navbar-nav.navbar-right
            if !user
              li(class=(title === 'Login') ? 'active' : undefined)
                a(href='/login') Login
              li(class=(title === 'Create Account') ? 'active' : undefined)
                a(href='/signup') Create Account
            else
              li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  if user.profile.picture
                    img(src=user.profile.picture)
                  else
                    img(src=user.gravatar(60))
                  span= user.profile.name || user.email || user.id
                  i.caret
                ul.dropdown-menu
                  li
                    a(href='/account') My Account
                  li.divider
                  li
                    a(href='/logout') Logout
